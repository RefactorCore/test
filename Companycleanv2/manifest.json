{
  "manifest_version": 3,
  "name": "Company Name Cleaner",
  "version": "1.0",
  "description": "Cleans company names using various rules directly in your browser.",
  "permissions": [
    "storage",
    "contextMenus",
    "clipboardWrite"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icons/icon48.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "48": "icons/icon48.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}